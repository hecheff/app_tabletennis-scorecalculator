<androidx.preference.PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:minHeight="0dp" title="Settings">

    <PreferenceCategory app:title="Note: Changing this setting resets the current game">
        <SwitchPreferenceCompat
                app:key="scoreMode"
                app:title="21 Point Mode"
                app:summaryOn="Win at 21 points, Deuce at 20-20"
                app:summaryOff="Win at 11 points, Deuce at 10-10"

                android:defaultValue="true"
        />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
